  bottom: 130rpx;
  border-radius: 30rpx;
  padding-left: 20rpx;
  
}


.btn1 {
  width: 80%;
  margin-top: 20rpx;
  background-color: #888;
  color: #FFFFFF;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 10rpx;
  left: 160rpx;
}

.btnImg {
  margin-right: 8rpx;
  width: 46rpx;
  height: 46rpx;
}

.btn1::after {
  border-radius: 98rpx;
