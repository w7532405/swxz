  padding-top: 15rpx;
  margin-left: 10rpx;
}
.show_text text{
  font-size: 30rpx;
}
.show_time{
  font-size: 30rpx;
  font-weight: 15rpx;
  color: 	#C0C0C0;
}
.seed_content{
  width: 90%;
  margin-left: 5%;
